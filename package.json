{
  "name": "backend",
  "version": "1.0.0",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon --exec babel-node ./src/index.js",
    "start": "babel-node ./src/index.js",
    "start:docker": "pm2-runtime --interpreter babel-node ./src/index.js",
    "build": "babel ./src/index.js --out-file ./dist/server.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules & jest --coverage --passWithNoTests --testPathPattern=./src/",
    "db:migrations:create": "npx sequelize-cli migration:create --migrations-path ./src/infrastructure/orm/sequelize/migrations --name ",
    "db:migrate": "npx sequelize-cli db:migrate",
    "setup:db": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "@babel/node": "^7.14.5",
    "@sentry/node": "^6.6.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-destructuring": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@jest/globals": "^27.0.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1"
  },
  "_moduleAliases": {
    "@common": "./src/common",
    "@application": "./src/application",
    "@domain": "./src/domain",
    "@infrastructure": "./src/infrastructure",
    "@documentation": "./src/documentation"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "v2/src/**/*.js": [
      "eslint --fix",
      "npm test"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "setupFiles": [
      "./loadEnv.js"
    ],
    "moduleNameMapper": {
      "@common(.*)$": "<rootDir>/src/common/$1",
      "@application(.*)$": "<rootDir>/src/application/$1",
      "@infrastructure(.*)$": "<rootDir>/src/infrastructure/$1",
      "@domain(.*)$": "<rootDir>/src/domain/$1"
    }
  }
}
